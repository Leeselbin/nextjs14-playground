{
    "compilerOptions": {
        "target": "ES6", // 컴파일 후 지원할 자바스크립트 버전 (ES6 또는 ESNext 등)
        "lib": ["DOM", "DOM.Iterable", "ES6"], // 사용할 라이브러리 (브라우저 및 ES6 기능)
        "module": "ESNext", // 모듈 시스템 (ESNext, CommonJS 등)
        "moduleResolution": "Node", // 모듈 해석 방식 (Node.js 환경)
        "jsx": "react-jsx", // JSX 지원 (React 17 이상에서 사용)
        "strict": true, // 엄격한 타입 검사
        "esModuleInterop": true, // CommonJS 모듈을 ES6 모듈처럼 import
        "skipLibCheck": true, // 라이브러리 타입 체크 무시
        "forceConsistentCasingInFileNames": true, // 파일명 대소문자 일관성 강제
        "resolveJsonModule": true, // JSON 파일 import 가능하게 설정
        "isolatedModules": true, // 각 파일을 독립적인 모듈로 처리
        "noEmit": true, // 컴파일 결과물 생성하지 않음 (타입 체크만)
        "allowSyntheticDefaultImports": true, // default export가 없는 모듈에서 default import 가능하게 설정
        "baseUrl": "./src", // 모듈 경로의 기본 경로 설정
        "paths": {
            "@components/*": ["components/*"], // 경로 별칭 설정
            "@utils/*": ["utils/*"]
        }
    },
    "include": ["src"], // 포함할 파일 또는 디렉토리
    "exclude": ["node_modules"] // 제외할 디렉토리
}
